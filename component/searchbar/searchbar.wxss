/* component/searchbar/searchbar.wxss */
.searchContain {
  width: 100%;
  height: 88rpx;
  display: flex;
  padding:0 25rpx;
  flex-direction: column;
}

.float-wrapper {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  box-shadow: 0 5rpx 15rpx 0 rgba(59, 67, 76, 0.1);
}

.search {
  background: #f5f5f5;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 68rpx;
  border-radius: 35rpx;
  border:1px solid #e4e4e4;
  position: relative;
}
.search image {
  width: 26rpx;
  height: 26rpx;
  margin-left: 20rpx;
   margin-right: 15rpx;
  display: inline-block;
  overflow: hidden;
}

.search .search_input {
  font-size: 26rpx;
  width: 435rpx;
  display: block;
  height: 61rpx;
  line-height: 61rpx;
  text-overflow: clip;
  white-space: nowrap;
  color:#9d9d9d;
  font-family: UICTFontTextStyleBody;
}

.fake-search-btn
{
  width: 120rpx;
  height: 63rpx;
  line-height: 63rpx;
  margin-right: 0rpx;
  font-size: 28rpx;
  align-items: center;
  color: #e63117;
  border: none;
  position: absolute;
  text-align: center;
  right: 10rpx;
}

.fake-search-btn text{
  height: 63rpx;
  line-height: 63rpx;
}

.search_input text{
  line-height: 61rpx;
  height: 61rpx;
}
.clear-ipt{
  width: 35rpx;
  height: 35rpx;
  float: right;
  font-size: 20rpx;
  /* position: absolute; */
  /* right: 160rpx; */
  color: #ffffff;
  border-radius: 50%;
  text-align: center;
  line-height: 35rpx;
  font-weight: bold;
}
.clear-ipt image{
  width: 100%;
  height: 100%;
  display: block;
}
.clear-ipt text{
    background: #888888;
    display: block;
    border-radius: 50%;
