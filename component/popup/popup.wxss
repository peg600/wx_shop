/* component/popup/popup.wxss */

.popup{
  position: relative;
  width: 100%;
  height: 100rpx;
  background-color: green;
}

.mask{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 10000; 
}

.wrapper{
  position: fixed;
  width: 100%;
  bottom: 0;
  overflow: visible;
  background-color: #fff;
  box-shadow: 0 5rpx 15rpx 0 rgba(159, 67, 76, 0.2);
}

.animate{
  transform: translateY(100%);
}

.title-class{
  position: relative;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 40rpx;
  color: #333;
  background-color: #ddd;
}

.close{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

