/* pages/endorser/takePhoto/takePhoto.wxss */

view{
  box-sizing: border-box;
}

.bottom{
  position: fixed;
  width: 100%;
  height: 750rpx;
  bottom: 0;
}
 
.btn-area{
  position: relative;
  width: 100%;
  height: 100%;
}

.album-button{
  position: relative;
  flex: 0 0 200rpx;
}

.album{
  position: relative;
  
}
.album image{
  position: relative;
  width: 85rpx;
  height: 80rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}

.take-photo{
  position: fixed;
  width: 160rpx;
  height: 160rpx;
  left: calc(750rpx * 0.5 - 80rpx);
  padding: 10rpx;
}

.take-photo
{
  position: relative;
}

.photo-button {
  position: absolute;
  width: 100%;
  height: 100%;
}
.photo-button image{
  position: relative;
  width: 100%;
  height: 100%;
  
}
.result
{
  display: flex;
  flex-direction: row;
}

.retry{
  position: relative;
  flex: 1 1;
}
.retry image{
  position: relative;
  width: 160rpx;
  margin-left: 106rpx;
  height: 160rpx;
}

.album{
  position: relative;
  width: 100rpx;
  padding: 10rpx;
  top: 50%;
  left:  50%;
  transform: translate(-50%,-50%);
}
.album image{
  position: absolute;
  width: 90rpx;
  height: 90rpx;
}

.change{
  position: relative;
  width: 100rpx;
  padding: 10rpx;
  top: 50%;
  left:  50%;
  transform: translate(-50%,-50%);
}
.change image{
  position: absolute;
  width: 90rpx;
  height: 90rpx;
}

.mask{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
}

.info{
  position: relative;
  width: 600rpx;
  height: 800rpx;
  top: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 20rpx;
  background: #fff;
}
.info image{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  top: 10rpx;
  right: 10rpx;
}

.preview{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: #fff;
}

.previewImage-wrapper{
  position: relative;
  width: 100%;
  height: 133vw;
  overflow: hidden;
}

.previewImage{
  position: relative;
  width: 100%;
  left: 50%;
  transform: translateX(-50%);
}

.previewBtn
{
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}

.previewBtn image{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}