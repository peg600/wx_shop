.collection-cotainer{
  padding:0 25rpx;
}
.glasses_list {
  margin-bottom: 45rpx;
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.view_glass {
  width: 337rpx;
  /* height: 510rpx; */
  display: inline-block;
  box-shadow: 0px 0px 15rpx #dadada;
  border-radius: 10rpx;
  margin-left: 24rpx;
  margin-top: 25rpx;
  box-sizing: border-box;
  position: relative;
}
.view_glass:nth-child(2n-1){
  margin-left: 2rpx
}
.view_glass image{
  width: 100%;
  height: 340rpx;
  border-radius: 10rpx;
}
.view_contain{
  position: relative;
  overflow: hidden;
  padding: 15rpx;
}
.view_contain image{
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  right: 10rpx;
  top: 50%;
  margin-top: -9rpx;
}
.view_title{
   text-align: left;
   font-size: 29rpx;
   margin-bottom: 8rpx;
   white-space:nowrap; 
   text-overflow:ellipsis;
   overflow:hidden; 
}
.view_price{
  position: relative;
  overflow: hidden;
  width: 100%;
}
.view_price text:nth-child(1){
   color: red
}
.view_price text:nth-child(2){
   color: #888888;
   font-size: 24rpx;
   margin-left: 10rpx;
}
.view_even{
  font-size: 25rpx;
  color: #888888;
  padding-top: 55rpx;
  text-decoration: line-through
}
.collection-default{
  margin: 110rpx auto;
  width: 310rpx;
  height: 310rpx;
}
.collection-default image{
  width: 100%;
  height: 100%;
}
page{
  height: 100%;
}
.collection-cotainer{
  height: 100%;
}
.bg-default{
  background: #f2f2f2;
  overflow: hidden;
}
.show-mask::after{
  display: block;
  width: 100%;
  height: 100%;
  position: absolute;
  content: 'a';
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background:black;
  opacity: 0.35;
}
.del-collect{
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -60rpx;
  margin-top: -60rpx;
  z-index: 99;
  width: 120rpx;
  height: 120rpx;
  background: #ffd611;
  border-radius: 50%;
  text-align: center;
  font-size: 28rpx;
  color: rgb(255, 255, 255);
  line-height: 120rpx;
}
