  position: fixed;
  width: 80rpx;
  height: 80rpx;
  right: 30rpx;
  bottom: 120rpx;
  overflow: hidden;
}
.to-fitview image{
  position: relative;
  width: 100%;
  height: 100%;
}
.to-fitview view{
  position: absolute;
  width: 100%;
