/* pages/offlineShop/pay/pay.wxss */

page{
  box-sizing: border-box;
  padding: 30rpx;
  background-color: #eee;
}

view{
  box-sizing: border-box;
}

.wrapper{
  position: relative;
  width: 100%;
  padding: 30rpx;
  border-radius: 15rpx;
  background-color: #fff;
}

.title{
  position: relative;
  padding: 20rpx;
  font-size: 34rpx;
}
.icon{
  position: absolute;
  width: 20rpx;
  height: 40rpx;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
}

.rotate{
  transform: translateY(-50%) rotate(90deg);
}

.coupons-wrapper{
  position: fixed;
  width: 100%;
  max-height: 70%;
  bottom: 0;
  transform: translateY(100%);
  padding: 40rpx;
  overflow: scroll;
  background-color: #fff;
  box-shadow: 0 5rpx 15rpx 0 rgba(159, 67, 76, 0.2);
}

.coupon-list{
  position: relative;
  width: 100%;
}

.coupon{
  display: flex;
  align-items: center;
  position: relative;
  width: 100%;
  height: 170rpx;
  margin-top: 30rpx;
  background-color: red;
}
.coupon:first-child{
  margin-top: 0;
}

.coupon:before, .coupon:after {
    content: ' ';
    width: 0;
    height: 100%;
    /* 绝对定位进行偏移 */
    position: absolute;
    top: 10rpx;
}

.coupon:before {
    /* 圆点型的border */
    border-right: 10rpx dotted white;
    /* 偏移一个半径，让圆点的一半覆盖div */
    left: -4rpx;
}

.coupon:after {
    /* 圆点型的border */
    border-left: 10rpx dotted white;
    /* 偏移一个半径，让圆点的一半覆盖div */
    right: -4rpx;
}

.yellow{
  background-color: rgb(250, 231, 21);
}

.coupon-left{
  position: relative;
  flex: 1 1;
  height: 100%;
  padding: 0 20rpx;
  line-height: 40rpx;
  font-size: 30rpx;
  color: white;
}

.coupon-right{
  position: relative;
  flex: 0 0 200rpx;
  height: 100%;
  line-height: 170rpx;
  text-align: center;
  font-size: 50rpx;
  color: #fff;
}
.coupon-right:before {
    content: ' ';
    width: 0;
    height: 100%;
    /* 绝对定位进行偏移 */
    position: absolute;
    top: 0rpx;
    /* 圆点型的border */
    border-right: 10rpx dotted white;
    /* 偏移一个半径，让圆点的一半覆盖div */
    left: -4rpx;
}

.coupon-used{
  color: #333;
  background-color: #ccc;
}

.selected{
  color: #333;
  background-color: yellow;
}

.price-wrapper{
  display: flex;
  position: relative;
  width: 100%;
  height: 60rpx;
  margin: 20rpx 0;
  padding: 0 20rpx;
  line-height: 60rpx;
  font-size: 34rpx;
}

.price{
  position: relative;
  flex: 0 0 200rpx;
  height: 100%;
}

.input{
  position: relative;
  flex: 1 1;
  height: 100%;
  margin-right: 50rpx;
  padding: 0 30rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  line-height: 58rpx;
}

.pay{
  position: relative;
  width: 500rpx;
  height: 80rpx;
  left: 50%;
  transform: translateX(-50%);
  margin: 30rpx 0;
  border-radius: 15rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 40rpx;
  color: #fff;
  background-color: red;
}

.mask{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 100; 
}

.cash{
  position: relative;
  width: 100%;
  height: 100rpx;
  top: 50%;
  transform: translateY(-50%);
  text-align: center;
  line-height: 100rpx;
  font-size: 80rpx;
}

.small{
  display: inline-block;
  font-size: 36rpx;
}