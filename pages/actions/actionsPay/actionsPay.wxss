   line-height: 54rpx;
   font-size: 40rpx;
}
.add{
   color: #353535;
}

.goods-number{
  color: rgb(136, 136, 136);
  width: 94rpx;
  background: #f6f6f6;
  text-align: center;
  height: 54rpx;
  line-height: 54rpx;
}
.balance{
  height: 100rpx;
  background: #ffffff;
  position: fixed;
  bottom: 0;
  left: 0;
