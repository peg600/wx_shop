.normal{
  background: url('https://www.zhaoxinzx.top/img/normal.png') 50% 50%/cover;
}
.selected{
  background: url('https://www.zhaoxinzx.top/img/checked.png') 50% 50%/cover;
}
.cart-container{
  margin-bottom: 100rpx;
}
.shop{
  margin-bottom: 23rpx;
  background: #ffffff;
  width: 750rpx;
  overflow: hidden;

}
.title{
  height: 80rpx;
  border-bottom: 1px solid rgb(230, 230, 230);
  /* margin: 0 29rpx; */
  padding: 0 29rpx;
}
.check-btn{
  width: 40rpx;
  height: 40rpx;
  /* background: red; */
  border-radius: 50%; 
  /* border: 2rpx solid rgb(112, 112, 112); */
  box-sizing: border-box;
  margin-right:28rpx;

}
.shop-icon{
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-right: 16rpx;
}
.shop-info{
  flex: 1;
  text-align: left;
  justify-content: center;
  align-items: center;
}
.shop-info text{
  font-size: 22rpx;
  color: rgb(53, 53, 53);
}
.voucher{
  font-size: 22rpx;
  color: rgb(53, 53, 53);
  /* margin-right: 30rpx; */
}
.shop-info text,.voucher{
  line-height: 80rpx;
  height: 80rpx;
}
.flex{
  justify-content: initial;
}
.goods{
  padding: 25rpx 30rpx 25rpx 28rpx;
  width: 950rpx;

  
}
.container-goods-item{
  width: 950rpx;
  display: flex;
  position: relative;
  transition: left 0.2s linear;
  /* -moz-transition: left 0.2s linear; */
  left: 0;
  
}
.show-del-btn{
    left: -210rpx;  
    /* transition: all 5s linear; */
}
.del-goods{
  position: absolute; 
  right: 0;
  top: 0;
  bottom: 0; 
  width: 200rpx; 
  display: flex;
  justify-content: center;
  color: #ffffff;
  font-size: 40rpx;
  align-items: center;
  background: rgb(230, 67, 64);
}
.goods-btn{
  display: flex;
  align-items: center;
}
.goods-img image{
    width: 210rpx;
    height: 210rpx;
    background: #ccc;
    margin-right: 30rpx;
}
.goods-name{
  font-size: 26rpx;
  width: 392rpx;
  overflow: hidden;
  color: rgb(53, 53, 53);
  font-family: "PingFangSC-Medium";
  line-height: 36rpx;
  margin-bottom: 6rpx;

  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods-attr{
  width: 392rpx;
  font-size: 22rpx;
  color: rgb(136, 136, 136);
  /* background: #f7f7f7; */
  height: 42rpx;
  line-height: 42rpx;
  /* margin-bottom: 36rpx; */
}
.rmb{
  font-size: 28rpx;
}
.price{
  font-size:34rpx; 
  display: inline-block;
  width: 160rpx;
}
.rmb,.price{
  color: rgb(230, 67, 64);
  font-size: 36rpx;
}
.goods-number-price{
  display: flex;
  justify-content: center;
  align-items: center;
}
.number-box{
  /* border: 1px solid rgb(222, 222, 222); */
  border-radius: 8rpx;
  /* width: 116rpx; */
  height: 54rpx;
  font-size: 28rpx;
  box-sizing: border-box;
   display: flex; 
}
.number-box text{
  /* margin-left:18rpx; */
  text-align: center;
}
.add{
   color: #353535;
  
}
.reduce,.add{
  color: rgb(222, 222, 222);
   width: 54rpx; 
