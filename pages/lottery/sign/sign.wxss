/* pages/lottery/sign/sign.wxss */

view{
  box-sizing: border-box;
}

.wrapper{
  position: relative;
  width: 100%;
  background: white;
}

.title{
  position: relative;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 40rpx;
  color: #333;
  background: #ddd;
}

.credit{
  position: relative;
  width: 200rpx;
  height: 200rpx;
  left: 50%;
  transform: translateX(-50%);
  margin-top: 50rpx;
  padding: 40rpx 0;
  border-radius: 50%;
  border: 1rpx solid #ddd;
  text-align: center;
}
.credit view{
  position: relative;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: black;
}
.credit view:first-child{
  margin-bottom: 20rpx;
}

.sign{
  position: relative;
  width: 100%;
  height: 80rpx;
  margin-top: 50rpx;
  text-align: center;
}
.sign text{
  line-height: 80rpx;
  vertical-align: middle;
  font-size: 30rpx;
  color: black;
}
.sign view{
  display: inline-block;
  height: 100%;
  margin-left: 30rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  line-height: 80rpx;
  vertical-align: middle;
  font-size: 32rpx;
  color: black;
}

.bonus-wrapper{
  position: relative;
  width: 100%;
  margin-top: 50rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
}
.bonus-wrapper view:first-child{
  position: relative;
  width: 100%;
}

.bonus{
  display: flex;
  position: relative;
  width: 100%;
  height: 80rpx;
  justify-content: space-between;
  margin-top: 30rpx;
  padding: 15rpx 30rpx;
  border: 1rpx solid #ddd;
  border-radius: 15rpx;
}
.bonus view{
  position: relative;
  height: 100%;
  flex: 1 1 ;
  line-height: 50rpx;
}
.bonus view:nth-child(2){
  flex: 0 0 100rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  text-align: center;
  line-height: 48rpx;
}

.sign-result-wrapper{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: white;
}

.sign-result{
  position: relative;
  width: 600rpx;
  height: 600rpx;
  top: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  font-size: 40rpx;
}
.sign-result view{
  position: relative;
  width: 200rpx;
  height: 80rpx;
  left: 50%;
  transform: translateX(-50%);
  line-height: 80rpx;
  margin-top: 200rpx;
  color: white;
  background: green;
}

.back{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  top: 120rpx;
  right: 20rpx;
  padding: 10rpx;
}