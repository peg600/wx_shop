}

.star_img
{
   width: 40rpx;
}

.flexItem {
  flex: 1;
  flex-direction: column;
  flex-grow: 1;
  display: flex;
  justify-content: center;
  align-items: center;
   background-repeat: no-repeat;
   background-size: auto 100%;
}

.user_image {
  position: relative;
  width: 100rpx;
  height: 100rpx;
}

.user_image image{
  width: 100rpx;
   box-sizing: border-box;
  overflow: hidden;
  border-radius: 50% 50%;
}

.user_name {
  margin-top: 10rpx;
  font-size: 26rpx;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 300rpx;
}

.score_value
{
  position: absolute;
  top: -20rpx;
  right: 0rpx;
  color: #e63117;
  font-size: 20rpx;
}

.star_title
{
  font-weight: bold;
  font-size: 40rpx;
