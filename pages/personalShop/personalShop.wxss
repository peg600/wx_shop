/* pages/personalShop/personalShop.wxss */
page{
  position: relative;
  box-sizing: border-box;
  height: 100%;
  min-height: 100%;
  padding: 0;
  margin: 0;
}

view{
  box-sizing: border-box;
}

#bac{
  position: relative;
  width:100%;
  height: 100%;
  z-index: -1;
}
#bac canvas{
  z-index: -1;
}

#bac image{
  position: absolute;
  width:100%;
  height: 100%;
  top:0px;
  bottom:0px;
}

.main{
  position: absolute;
  width: 100%;
  top:0px;
  bottom:0px;
  padding-top: 8rpx;
  border-top: 2rpx solid rgb(229, 229, 229);
  z-index: 1000;
}

.persen-center{
  display: inline-block;
  position: relative;
  margin-left: 24rpx;
  padding: 12rpx 0 12rpx 8rpx;
  border-radius: 20rpx;
  background-color: rgb(252, 209, 153);
}
.persen-center image{
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  margin-right: 8rpx;
  vertical-align: middle;
  border-radius: 15rpx;
}

.shop-name{
  display: inline-block;
  position: relative;
  width: 262rpx;
  height: 60rpx;
  margin-right: 8rpx;
  border-radius: 15rpx;
  line-height: 60rpx;
  vertical-align: middle;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
  color: rgb(177, 177, 177);
  background-color: white;
}

.share{
  position: absolute;
  width: 126rpx;
  height: 80rpx;
  top: 10rpx;
  right: 0rpx;
  padding: 10rpx 0 15rpx 0;
  border-radius: 20rpx 0 0 20rpx;
  text-align: center;
  font-size: 20rpx;
  color: white;
  background-color: rgb(153, 153, 153);
}
.share image{
  position: relative;
  width: 44rpx;
  height: 38rpx;
}
.share text{
  display: block;
  margin-top: -5rpx;
}

.btn-wrapper{
  position: absolute;
  left: 20rpx;
  bottom: 30rpx;
}
.btn-wrapper image{
  width: 94rpx;
  height: 110rpx;
}

.back{
  display: inline-block;
  position: relative;
  margin-right: 32rpx;
}

.decorate-btn{
  display: inline-block;
  position: relative;
}

.buy{
  position: absolute;
  width: 163rpx;
  height: 205rpx;
  right: 5rpx;
  bottom: 30rpx;
}

.decorate{
  position: absolute;
  width: 100%;
  height: 480rpx;
  bottom: 0;
  left: 0;
  transform: translateY(100%);
  border-radius: 20rpx 20rpx 0 0 ;
  overflow: hidden;
  z-index: 100;
}

.decorate-title{
  position: relative;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 24rpx;
  color: rgb(39, 39, 39);
  background-color: rgb(253, 236, 188);
}

.back-arrow{
  box-sizing: border-box;
  position: absolute;
  width: 48rpx;
  height: 36rpx;
  right: 20rpx;
  top: 24rpx;
  padding: 10rpx;
}

.decorate-list{
  position: relative;
  width: 100%;
  height: 100%;
  padding: 36rpx 0 0 24rpx;
  background-color: white;
}

.decorate-item{
  display: inline-block;
  position: relative;
  width: 220rpx;
  height: 220rpx;
  border-radius: 40rpx;
  margin-right: 24rpx;
  overflow: hidden;
}
.decorate-item:last-child{
  margin-right: 0;
}
.decorate-item image{
  width: 100%;
  height: 100%;
}

.personal-save{
  position: absolute;
  width: 94rpx;
  height: 70rpx;
  left: 20rpx;
  top: 5rpx;
  border-radius: 0;
}





