Page{
  box-sizing: border-box;
}

.page-container
{
  width: 100%;
  height: 100%;
  min-height: 500rpx;
  display:flex; justify-content:center; align-items:center;
}

.title
{
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.user-info
{
  position: relative;
  width: 100%;
  padding: 60rpx;
  font-size: 30rpx;
}

.subtitle
{
    margin-bottom: 40rpx;
}

.logo-info
{
  position: absolute;
  
  display:flex; justify-content:center; align-items:center;
}

.logo-info image{
  width: 300rpx;
}

.login
{
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
}

.form-button{
  position: fixed;
  box-sizing: border-box;
  width: calc(100% - 120rpx);
}