<!--pages/index/type/type.wxml-->
<view class="stop_pushOn">
  <view class="searchContain">
    <view class="section search">
      <image src="../../img/search.png"></image>
      <input type='text' class="search_input" placeholder="搜索各类风格样式都有啦" confirm-type='搜索' bindinput='listenSearch' bindconfirm='searchNewList' value="{{cipt}}"/>
      <view class='clear-ipt'><image src='/pages/img/51133509394742205.png' wx:if="{{showClear}}" bindtap='clearValue'></image></view>
      <button bindtap='searchNewList' class='search-btn' plain>
        搜索
      </button> 
    </view>
  </view>
  <view class="sort_container" >
    <view class="sortList flex" wx:if="{{sortShow}}">
      <view class="type-box" wx:for-items="{{sortNameList}}" wx:key="id">
        <view id="{{item.activeId}}" class="{{activeShopId == item.activeId? 'active' : ''}}" bindtap="sortBindGetList" data-sorts="{{item.sortName}}">
          {{item.name}}
        </view>
        <view class='arror-img' wx:if="{{activeShopId == item.activeId&&item.activeId!=0&&item.activeId!=2?true:false}}"><image src='/pages/img/375445856301600285.png' class="{{sortFlag==true?'':'rot-img'}}"></image> </view>
      </view>
    </view>

    <view class="glasses_list">
      <view class="view_glass fl" wx:for="{{glasses_data}}" wx:for-item="glass" data-goodid="{{glass.goods_id}}" bindtap="toDetailListPage">
        <image src="{{glass.goods_img}}"></image>
        <view class="view_contain">
          <view class="view_title">{{glass.goods_name}}</view>
          <view class="view_price fl">
            <text>￥{{glass.shop_price}}元</text>
            <!--<text>销量：{{glass.count_goods_num}}</text>-->
            <!-- <image src="../../img/togethIcon.png" class="fr" width="36" height="36"></image> -->
          </view>
          <view class="view_even">原价 :￥{{glass.market_price}}元</view>
        </view>
      </view>
    </view>
  </view>
  <loading hidden="{{hidden}}" bindchange="loadingChange">
    {{adjustHttp}}
  </loading>
  <view class="history_search container" wx:if="{{historyShow}}">
    <view class="flex" wx:if='{{historys.length != 0}}'>
      <text class="hitstirt_word">历史搜索</text>

      <icon type="clear" bindtap='clearLog'></icon>
    </view>
    <button wx:for-items="{{historys}}" bindtap='clickHistory' class="btn_" data-name="{{item}}">
      {{item.name}}
    </button>
  </view>
</view>
<view class="noPage" wx:if='{{hasMoreList.length==0}}'><image src="../../img/hasmore.png"></image></view>