/* pages/sharePage/sharePage.wxss */
page{
  background: #f2f2f2;
  text-align: center;
}

.background-pic {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: -1;
}

.canv {
  position: absolute;
  left: -1500px;
}

.pic {
  position: relative;
  box-sizing: border-box;
  width: 580rpx;
  height: 580rpx; 
  margin: 120rpx 85rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 200rpx 10rpx rgba(255,209,102,.22);
  background: white;
}
.share-text{
  background: #ffffff;
  width: 514rpx;
  margin: 105rpx auto;
  padding: 60rpx 50rpx 70rpx;
  position: relative;
  box-sizing: border-box;
}
.welcome text{
  font-size: 32rpx;
}
.st text{
  font-size: 64rpx;
}
.sc text{
  font-size: 30rpx;
  color: #fca92a;
}
.welcome,.st,.mb{
  text-align: center;
}
.st{
  margin: 35rpx 0 70rpx;
}
.mb{
  height: 130rpx;
  line-height: 130rpx;
}
.mb image{
  width: 79rpx;
  height: 86rpx;
}
.wi{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  bottom: -25rpx;
  left: 50%;
  margin-left: -25rpx;
}
.wi image{
  width: 100%;
  height: 100%;
}

.pic-btn button {
  display: block;
  box-sizing: border-box;
  width: 580rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 10rpx; 
  border: 2px solid rgb(254, 191, 0);
  text-align: center;
  font-weight: 550;
  color: rgb(255, 211, 102);
  background: white;
}
.pic-btn button:last-child {
  margin-top: 25rpx;
  border: 0;
  color: white;
  background: rgb(255, 211, 2)
}
.share-btn button{
  width: 480rpx;
  height: 90rpx;
  border-radius: 45rpx;
  background: #fdc02c;
  border: 0;
  color: #ffffff;
}

.share-pic {
  width: 100%;
  height: 100%;
}

.view_hide {
  display: none;
}
.view_show {
  display: block;
}

.save-mask {
  position: absolute;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  min-height: 100%;
  max-height: 100%;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  text-align: center;
  background-color: rgba(0,0,0,.6);
  z-index: 500;
}
.save-wrapper {
  position: relative;
  top: 15%;
  width: 100%;
  text-align: center;
}
.save-pic {
  position: relative;
}
.save-word {
  display: block;
  margin-top: 24px;
  font-size: 20px;
  color: white;
}
